<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <!-- A CardView that contains a Images and texts -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="109dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="92dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Work Info :"
                android:textSize="10sp"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="@+id/txt_name"
                card_view:layout_constraintTop_toBottomOf="@+id/txt_name"
                card_view:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="52dp"
                android:layout_height="71dp"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/guest_icon"
                tools:layout_editor_absoluteX="7dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Contact :"
                android:textSize="10sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toEndOf="@+id/imageView2"
                tools:layout_editor_absoluteY="8dp" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Muhammet ÇAĞATAY"
                android:textColor="@color/colorTurquoise"
                android:textSize="18sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toStartOf="@+id/textView"
                card_view:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/txt_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software Engxxddddineer"
                android:textStyle="normal"
                card_view:layout_constraintStart_toStartOf="@+id/textView3"
                card_view:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/txt_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Boomset"
                android:textStyle="italic"
                card_view:layout_constraintStart_toEndOf="@+id/txt_job"
                card_view:layout_constraintTop_toTopOf="@+id/txt_job" />


        </androidx.constraintlayout.widget.ConstraintLayout>


